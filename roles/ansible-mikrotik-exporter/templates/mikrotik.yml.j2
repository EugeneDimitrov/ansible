{{ ansible_managed | comment }}

devices:
{% for k in mikrotik_exporter_targets %}
  - name: {{ k.name }}
    address: {{ k.address }}
    port: {{ k.port }}
    user: {{ k.user }}
    password: {{ k.password }}
{% endfor %}

features:
  bgp: {{ mikrotik_exporter_bgp_metrics }}
  dhcp: {{ mikrotik_exporter_dhcp_metrics }}
  dhcpv6: {{ mikrotik_exporter_dhcpv6_metrics }}
  dhcpl: {{ mikrotik_exporter_dhcpl_metrics }}
  routes: {{ mikrotik_exporter_routes_metrics }}
  pools: {{ mikrotik_exporter_pools_metrics }}
  wlansta: {{ mikrotik_exporter_wlansta_metrics }}
  wlanif: {{ mikrotik_exporter_wlanif_metrics }}
  monitor: {{ mikrotik_exporter_monitor_metrics }}
  health: {{ mikrotik_exporter_health_metrics }}
  firmware: {{ mikrotik_exporter_firmware_metrics }}
  ipsec: {{ mikrotik_exporter_ipsec_metrics }}
  optics: {{ mikrotik_exporter_optics_metrics }}
  poe: {{ mikrotik_exporter_poe_metrics }}
  w60g: {{ mikrotik_exporter_w60g_metrics }}
  
